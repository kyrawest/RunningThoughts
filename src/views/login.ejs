<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Jog your memory with RunningThoughts! Capture notes while out on your runs to organize your thoughts with intuitive speech-to-text. Boost productivity and never forget a brilliant idea."
    />
    <title>Login</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>

  <body class="bg-darkish text-light">
    <nav class="navbar navbar-expand-lg fixed-top bg-primary">
      <div class="container-fluid"></div>
    </nav>
    <main class="mt-4">
      <% if (flashMessages.error && flashMessages.error.length > 0) { %> <%
      flashMessages.error.forEach(function(msg) { %>
      <div
        class="mt-3 alert alert-dismissible alert-warning container"
        role="alert"
        aria-live="assertive"
      >
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close alert"
        ></button>
        <h4 class="alert-heading">Error</h4>
        <p class="mb-0"><%= msg %></p>
      </div>
      <% }) %> <% } %> <% if (flashMessages.success &&
      flashMessages.success.length > 0) { %> <%
      flashMessages.success.forEach(function(msg) { %>
      <div
        class="mt-3 alert alert-dismissible alert-success container"
        role="alert"
        aria-live="polite"
      >
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close alert"
        ></button>
        <h4 class="alert-heading">Success!</h4>
        <p class="mb-0"><%= msg %></p>
      </div>
      <% }) %> <% } %>

      <div class="container-fluid">
        <div class="row">
          <div
            class="col-lg-7 col-12 mb-lg-3 mb-0 d-flex justify-content-center align-items-lg-center align-items-end"
            id="large-logo"
          >
            <img
              src="/images/jym-large-logo.png"
              alt="Running Thoughts Logo, RUNNINGTHOUGHTS, JOG YOUR MEMORY"
              class="img-fluid h-75"
            />
          </div>

          <div
            class="col-lg-4 col- 12 d-flex flex-column justify-content-lg-center justify-content-start position-relative bottom-5"
          >
            <h1 class="container mb-3 mt-lg-5 pt-lg-5">Login</h1>
            <form action="/users/login" method="POST" class="mb-3 container">
              <div class="mb-3 form-floating">
                <input
                  type="email"
                  id="emailInput"
                  name="email"
                  class="form-control"
                  placeholder="name@example.com"
                  required
                  autocomplete="email"
                />
                <label for="emailInput" class="form-label">Email</label>
              </div>

              <div class="mb-3 form-floating">
                <input
                  type="password"
                  id="passwordInput"
                  name="password"
                  class="form-control"
                  placeholder="Password"
                  required
                  autocomplete="current-password"
                />
                <label for="passwordInput" class="form-label">Password</label>
              </div>

              <button type="submit" class="btn btn-primary">Log In</button>
              <a href="/register" class="btn btn-secondary">
                Don't have an account yet?
              </a>
            </form>
          </div>
          <div class="col-1"></div>
        </div>
      </div>
    </main>

    <footer
      class="bg-dark text-center text-mutedish text-lg-start border-top py-3 mt-auto"
      role="contentinfo"
      aria-label="Footer"
    >
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6 text-center text-lg-start mb-2 mb-lg-0">
            <span>&copy; 2025 Kyra West Â· Running Thoughts</span>
          </div>
          <div class="col-lg-6 text-center text-lg-end">
            <a
              href="https://github.com/kyrawest/RunningThoughts"
              target="_blank"
              class="me-3 text-decoration-none text-mutedish"
              aria-label="View project on GitHub"
              rel="noopener noreferrer"
            >
              <i class="fab fa-github"></i> GitHub
            </a>
          </div>
        </div>
      </div>
    </footer>

    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
