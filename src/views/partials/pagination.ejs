<% if (user.tot_runs > 10) { const pages = Math.ceil(user.tot_runs / 10); const
currentPage = parseInt(pageNumber); %>
<div>
  <ul class="pagination pagination-lg">
    <!-- Previous Button -->
    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
      <a class="page-link" href="/dashboard/?page=<%= currentPage - 1 %>"
        >&laquo;</a
      >
    </li>

    <!-- First Page -->
    <li class="page-item <%= currentPage === 1 ? 'active' : '' %>">
      <a class="page-link" href="/dashboard/?page=1">1</a>
    </li>

    <!-- Left Ellipsis -->
    <% if (currentPage > 3) { %>
    <li class="page-item disabled"><a class="page-link">...</a></li>
    <% } %>

    <!-- Page Numbers Around Current -->
    <% for (let i = Math.max(2, currentPage - 1); i <= Math.min(pages - 1,
    currentPage + 1); i++) { %>
    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
      <a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a>
    </li>
    <% } %>

    <!-- Right Ellipsis -->
    <% if (currentPage < pages - 3) { %>
    <li class="page-item disabled"><a class="page-link">...</a></li>
    <% } %>

    <!-- Last Page -->
    <% if (pages > 1) { %>
    <li class="page-item <%= currentPage === pages ? 'active' : '' %>">
      <a class="page-link" href="/dashboard/?page=<%= pages %>"><%= pages %></a>
    </li>
    <% } %>

    <!-- Next Button -->
    <li class="page-item <%= currentPage === pages ? 'disabled' : '' %>">
      <a class="page-link" href="/dashboard/?page=<%= currentPage + 1 %>"
        >&raquo;</a
      >
    </li>
  </ul>
</div>
<% } %>
