<!-- Modal -->
<div
  class="modal fade"
  id="editNoteModal"
  tabindex="-1"
  aria-labelledby="editNoteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <form method="POST" class="modal-content" id="edit-note-form">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="editNoteModalLabel">Edit Note</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <input type="hidden" name="_method" value="PUT" />
          <label for="content" class="form-label">Note Content</label>
          <textarea
            class="form-control"
            id="edit-note-modal-content"
            name="content"
            rows="5"
            required
          ></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button
          type="submit"
          class="btn btn-primary"
          id="save-changes-button"
          data-bs-dismiss="modal"
        >
          Save changes
        </button>
      </div>
    </form>
  </div>

  <!-- Mic Button -->
  <button
    class="mic-button btn btn-lg shadow-lg btn-danger rounded-circle"
    title="Start Voice Input"
    id="edit-mic"
  >
    <i class="fas fa-microphone"></i>
  </button>
</div>
